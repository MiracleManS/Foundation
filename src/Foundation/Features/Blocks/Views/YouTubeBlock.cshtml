@model  YouTubeBlock

<div style="@Model.PaddingStyles">
    <div class="row">
        @if (Model.HasHeadingText)
        {
            <div class="col-12">
                <h1 @Html.EditAttributes(x => x.Heading)>@Model.Heading</h1>
                @Html.PropertyFor(x => x.MainBody)
            </div>
        }
        @if (Model.HasVideo)
        {
            <div class="col-12">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="@Model.YouTubeLink"></iframe>
                </div>
            </div>
        }
    </div>
</div>